rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Auth required for writes; reads are public only for the 'public' collection
    match /pings/{id} {
      allow read: if true;           // demo-readable
      allow write: if request.auth != null;
    }
    // Lock everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
